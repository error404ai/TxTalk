# API server configuration
PORT=8000
VITE_APP_URL=http://localhost:5173

# Database connection
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_NAME=solmessage_db
DB_SYNCHRONIZE=true

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
# Optional: Only needed for server-side transaction signing (not recommended for production)
# SOLANA_PAYER_PRIVATE_KEY=your_base58_encoded_private_key_here

# Testing Configuration
# Set to true to enable test mode (no real NFT.Storage uploads, free devnet testing)
TEST_MODE=true

# NFT.Storage Configuration (Optional)
# Get a free API key at https://nft.storage
# In test mode, uploads are mocked so this is optional
# NFT_STORAGE_API_KEY=your_nft_storage_api_key_here
# NFT_STORAGE_GATEWAY_URL=https://nftstorage.link/ipfs/

# Optional: Custom metadata image URL (not needed if using bundled tokenImage.jpg)
# MESSAGE_METADATA_IMAGE_URL=https://example.com/your-logo.png
