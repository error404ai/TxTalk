{
  "name": "@txtalk/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./router": {
      "browser": {
        "import": "./dist/routers/browser.js",
        "types": "./dist/routers/browser.d.ts"
      },
      "import": "./dist/router.js",
      "types": "./dist/router.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc -b tsconfig.json --force && tsc-alias",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "start": "node -r dotenv/config dist/index.js",
    "check-types": "tsc --noEmit",
    "db:drop": "tsx ./node_modules/typeorm/cli.js schema:drop --dataSource src/database.ts",
    "db:seed": "tsx src/seeders/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.3",
    "@hono/trpc-server": "^0.3.2",
    "@metaplex-foundation/mpl-token-metadata": "^2.10.2",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@trpc/server": "^11.0.0",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.0",
    "hono": "^4.6.14",
    "mysql2": "^3.12.0",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.2",
    "typeorm": "^0.3.20",
    "undici": "^6.19.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
